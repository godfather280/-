#! /bin/bash


_Pbxbot_zip () {
    if [[ $PLUGINS_REPO ]]
    then
        echo "https://github.com/${PLUGINS_REPO}/archive/master.zip"
    else
        echo "https://github.com/Badhacker98/PBX_2.0/archive/master.zip"
    fi
}

_starter () {
    echo "â€¢â€¢â€¢ Downloading ğŸ•·ğ’ğ©ğ¢ğğâœ˜ğ›ğ¨ğ­ğŸ•· [v3] â€¢â€¢â€¢"
    Pbxpath="Plugins.zip"

    wget -q $(_Pbxbot_zip) -O "$Pbxpath"
    PBXPATH=$(zipinfo -1 "$Pbxpath" | grep -v "/.");
    unzip -qq "$Pbxpath"
    rm -rf "$Pbxpath"
    cd $PBXPATH
    python3 ../updater.py ../requirements.txt requirements.txt

    echo "â€¢â€¢â€¢ Starting ğŸ•·ğ’ğ©ğ¢ğğâœ˜ğ›ğ¨ğ­ğŸ•· â€¢â€¢â€¢"
    chmod 777 start.sh
    ./start.sh
}

_starter
